<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/_all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/01-jquery-1.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/10-common.js")"></script>
</head>
<body>
    <div id="head">
        <div style="float: right">
            Evgeny Tukin | <a href="#">My account</a> | <a href="#">Sign out</a>
        </div>
        <a href="#" style="font-weight: bold; text-decoration: none">Store Home</a>
    </div>
    <div id="green-top">
        <div class="container-inner">
            <h1 id="title">
                <script>
                    // write shadow if text-shadow not supported by the browser
                    if ($("<div/>")[0].style.textShadow !== '') {
                        document.write("<a href='javascript:void(0)' id='title-shadow'>Japa Stuff</a>")
                    }
                </script>
                <a href="javascript:void(0)">Japa Stuff</a>
            </h1>
        </div>
        <ul id="nav" class="container-inner clearfix">
            <li class="active"><a href="javascript:;">
                <img src="@Url.Content("~/Content/home.gif")"
                    style="position: relative; top: 2px; border: none; height: 16px; width: 16px;" /></a></li>
            <li><a href="javascript:void(0)">Orders (1)</a></li>
            <li><a href="javascript:void(0)">Customers</a></li>
            <li><a href="javascript:void(0)">Products</a></li>
            <li><a href="javascript:void(0)">Content</a></li>
            <li><a href="javascript:void(0)">Marketing</a></li>
            <li class="separate"><a href="javascript:void(0)">Settings</a></li>
        </ul>
    </div>
    <div class="container-inner">
        <div id="content">
            <div id="subnav">
                <a href="#">New project</a> &nbsp;|&nbsp; <b>Search for</b>
                <input type="text" />
                <input type="button" value="Search" />
                &nbsp;|&nbsp; <a href="#">Advanced search</a>
            </div>
            @RenderBody()
            <div style="height: 570px; _overflow: scroll;">
            </div>
            <div style="height: 300px">
            </div>
        </div>
        <div id="footer">
            Powered by PLEX commerce
        </div>
    </div>
</body>
</html>
